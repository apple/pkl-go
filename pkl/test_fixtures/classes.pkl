abstract class Animal {
  name: String
}

open class Dog extends Animal {
  barks: Boolean
  breed: String
}

class Greyhound extends Dog {
  breed = "Greyhound"
  canRoach: Boolean
}

class Cat extends Animal {
  meows: Boolean
}

class House {
  area: Int
  bedrooms: Int
  bathrooms: Int
}
